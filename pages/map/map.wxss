/* pages/map/map.wxss */
.contaniner {
  height: 100vh;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  /* background-image: "/images/费油变宝主页.png"  */
}

.blurView {
  position: absolute;
  height: 100vh;
  width: 100%;
  opacity: 0.6;
  background-color: white;
}

.customView {
  width: 50%;
  height: 50%;
   /* background-color: red;  */
   /* opacity: 0.5; */
  position: absolute;
}

.contaniner .bg_big {
  height: 100%;
  width:100%
}

canvas {
  height: 100%;
  width: 100%;
  position: absolute;
}

image text {
  position: absolute;
  width: 90px;
  height: 100px;
  font-size: 25px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  top: 8%;
  right: 11%;
  color: green;
}

.contaniner .trueIcon {
  top: 6.5%;
  right: 6%;
  width: 50px;
  height: 50px;
  position: absolute;
  text-align: center;
  background-size: 100% 100%;
  background-repeat:no-repeat;
  border:none;
  border-radius: 0px; 
}
.inputView_name {
  position: absolute;
  width: 100%;
  height: 20%;
  top: 3%;
  text-align: center;
  color: red;
  font-family: 'Times New Roman', Times, serif;
  font-size: 21pt;
}

.backgroud {
  top: 0vh;
  width: 100%;
  height: 100%;
  background-color: #fff;
  opacity: 0.7;
}

.backgroud text {
  top: 10vh;
  color: red;
  opacity: 1;
}

.inner {
  position: absolute;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 60%;
  background-color: #fff;
  opacity: 0.8;
  border-radius: 20px;
}

.button_close {
  position: absolute;
  z-index: 2;
  top: 20%;
  right: 10%;
} 

.inner .inner_main_bg{
  position: absolute;
  top: 15%;
  left: 12%;
  text-align: center;
} 
.inner .inner_button_bg1{
  position: absolute;
  top: 6%;
  left: 25%;
  color: #fff;
  background-color: #fff;
  text-align: center;
  background-size: 100% 100%;
  background-repeat:no-repeat;
  border:none;
  border-radius: 0px;
} 


.inner .inner_button_bg2{
  position: absolute;
  bottom: 6%;
  left: 25%;
} 

.inner .inner_button_bg3 {
position: absolute;
  bottom: 6%;
  left: 25%;  
  color: #fff;
  background-color: #fff;
  text-align: center;
  background-size: 100% 100%;
  background-repeat:no-repeat;
  border:none;
  border-radius: 0px;
}

inner_text_tile {
  display: inline-block;
  background-color: red;
}

