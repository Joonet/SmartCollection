/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  top: 0px;
  text-align: center;
  /* background-color: cyan; */
  
}

#smartCollectionMap {
  top: 0vh;
  width: 100%;
  height: 100vh;
}

.backgroud {
  top: 0vh;
  width: 100%;
  height: 100%;
  background-color: #fff;
  opacity: 0.7;
}

.backgroud text {
  top: 10vh;
  color: red;
  opacity: 1;
}

.inner {
  position: absolute;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 60%;
  background-color: #fff;
  opacity: 0.9;
  border-radius: 20px;
}

.button_close {
  position: absolute;
  z-index: 2;
  top: 20%;
  right: 10%;
} 

.inner .inner_main_bg{
  position: absolute;
  top: 15%;
  left: 12%;
  text-align: center;
} 
.inner .inner_button_bg1{
  position: absolute;
  top: 6%;
  left: 25%;
  text-align: center;
} 

.inner .inner_button_bg2{
  position: absolute;
  bottom: 6%;
  left: 25%;
} 

inner_text_tile {
  display: inline-block;
  background-color: red;
}

/**index.wxss**/

.topBar {
  /* padding: 5px 5px 5px 5px; */
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0; 
  width: 100%;
  height: 10%;
  background-color: antiquewhite; 
}

.topBar-userinfo {
  border-radius: 20px;
  float: left;
  height: 40px;
  width: 40px;
}

.bindViewTap {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.orderView {
  background-color: red;
}


.detail { 
  /* position: absolute; */
  /* border-width: 2px; */
  background: orange; 
  border-radius: 15px;
  margin: 5px 5px 5px 5px;
  top: 10px;
  height: 20%;
  width: 100%;
}

.room {
  position: absolute;
  text-align: center;
  bottom: 20%;
  left: 25%;
  width: 50%;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  
}


.coverview {
  display: inline-block;
  width: 45%;
  border: 1px solid #a1a1a1; 
   background: greenyellow; 
   border-radius: 10px; 
   padding: 1.25% 1.25%; 
}

.detail-title {
  font-size: 20px;
}

.detail-info {
  font-size: 10px;
}

.phoneView {
  float: left;
}

.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
  float: left;
}

.img1 {
  width: 20px;
